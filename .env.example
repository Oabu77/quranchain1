# QuranChain™ Environment Variables
# Copy to .env and fill in your values

# Cloudflare API Token — create at https://dash.cloudflare.com/profile/api-tokens
# Required permissions: Workers Scripts:Edit, D1:Edit, Account:Read
CLOUDFLARE_API_TOKEN=

# Cloudflare Account ID — found in Workers & Pages dashboard
CLOUDFLARE_ACCOUNT_ID=

# JWT Secret — used for HMAC-SHA256 token signing (24h expiry)
# Set as a Cloudflare secret: npx wrangler secret put JWT_SECRET
JWT_SECRET=

# Optional: Cloudflare Tunnel token for Argo Tunnel
CLOUDFLARE_TUNNEL_TOKEN=

# FungiMesh upstream
MESH_UPSTREAM=https://mesh.darcloud.host
